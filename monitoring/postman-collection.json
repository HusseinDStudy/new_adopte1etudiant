{
  "info": {
    "name": "Adopte1Etudiant API Monitoring",
    "description": "Comprehensive API monitoring collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Health check returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Health status is ok', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('ok');",
              "});",
              "",
              "pm.test('Database is connected', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.database).to.eql('connected');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Metrics (Admin Only - optional)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Cookie", "value": "token={{adminToken}}", "type": "text", "disabled": true }
        ],
        "url": {
          "raw": "{{baseUrl}}/metrics",
          "host": ["{{baseUrl}}"],
          "path": ["metrics"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (!pm.variables.get('adminToken')) {",
              "  console.log('Skipping metrics test: adminToken not set');",
              "  pm.test('Metrics test skipped (no adminToken)', function () { pm.expect(true).to.be.true; });",
              "} else {",
              "  pm.test('Metrics returns 200', function () { pm.response.to.have.status(200); });",
              "  const json = pm.response.json();",
              "  pm.test('Metrics payload has uptime and memory', function () {",
              "    pm.expect(json.status).to.eql('ok');",
              "    pm.expect(typeof json.uptimeSeconds).to.eql('number');",
              "    pm.expect(json).to.have.property('memory');",
              "  });",
              "}"]
            ,
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "API Documentation",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/docs/json",
          "host": ["{{baseUrl}}"],
          "path": ["docs", "json"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('OpenAPI spec is accessible', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Valid OpenAPI structure', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('openapi');",
              "    pm.expect(jsonData).to.have.property('info');",
              "    pm.expect(jsonData).to.have.property('paths');",
              "});",
              "",
              "pm.test('API info is complete', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.info).to.have.property('title');",
              "    pm.expect(jsonData.info).to.have.property('version');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Offers API",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/offers",
          "host": ["{{baseUrl}}"],
          "path": ["api", "offers"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Offers endpoint is accessible', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response shape is correct (array or data wrapper)', function () {",
              "    const jsonData = pm.response.json();",
              "    if (Array.isArray(jsonData)) {",
              "      pm.expect(jsonData).to.be.an('array');",
              "    } else {",
              "      pm.expect(jsonData).to.have.property('data');",
              "      pm.expect(jsonData).to.have.property('pagination');",
              "      pm.expect(jsonData.data).to.be.an('array');",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Companies API",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/companies",
          "host": ["{{baseUrl}}"],
          "path": ["api", "companies"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Companies endpoint is accessible', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array of companies', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Skills API",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/skills",
          "host": ["{{baseUrl}}"],
          "path": ["api", "skills"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Skills endpoint is accessible', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array of skills', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}
