{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "pretest": "npm run generate",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:specific": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:no-coverage": "vitest run --reporter=verbose",
    "seed": "tsx prisma/seed.ts",
    "db:seed": "prisma db seed",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:reset": "prisma db push --force-reset",
    "studio": "prisma studio",
    "generate": "prisma generate",
    "db:clean": "prisma migrate reset --force",
    "docs:json": "curl -s http://localhost:8080/docs/json > docs/api-spec.json && echo 'OpenAPI JSON spec generated at docs/api-spec.json'",
    "docs:yaml": "curl -s http://localhost:8080/docs/yaml > docs/api-spec.yaml && echo 'OpenAPI YAML spec generated at docs/api-spec.yaml'",
    "docs:generate": "mkdir -p docs && npm run docs:json && npm run docs:yaml",
    "docs:serve": "echo 'API Documentation available at: http://localhost:8080/docs'",
    "docs:validate": "node scripts/validate-api-docs.js",
    "docs:test": "npm run docs:validate",
    "lint": "eslint src --ext .ts,.js --fix"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@prisma/client": "^6.12.0",
    "ajv-formats": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "core": "file:../../packages/core",
    "db-postgres": "file:../../packages/db-postgres",
    "dompurify": "^3.2.6",
    "fastify": "^4.24.3",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "light-my-request": "^6.6.0",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.3",
    "shared-types": "file:../../packages/shared-types",
    "speakeasy": "^2.0.0",
    "validator": "^13.15.15",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.15.2",
    "@vitest/coverage-v8": "^3.2.4",
    "prisma": "^6.12.0",
    "supertest": "^7.0.0",
    "totp-generator": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.2",
    "typescript": "^5.3.3",
    "vite": "^6.3.6",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^2.0.0"
  },
  "keywords": [],
  "author": ""
}
